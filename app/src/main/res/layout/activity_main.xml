<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.qianwang.realmpractice.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GIS Traking "
        android:id="@+id/textView"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/loadButton"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/progressBar"
        android:layout_marginBottom="33dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadStatus"
        android:textSize="17dp"
        android:layout_above="@+id/progressBar"
        android:layout_centerHorizontal="true"  />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/results"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:layout_marginBottom="16dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Photo"
        android:id="@+id/loadButton"
        android:layout_above="@+id/testQuery"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW DATA"
        android:id="@+id/showData"
        android:layout_above="@+id/loadStatus"
        android:layout_alignLeft="@+id/loadButton"
        android:layout_alignStart="@+id/loadButton"
        android:layout_marginBottom="46dp"
        android:layout_alignRight="@+id/testQuery"
        android:layout_alignEnd="@+id/testQuery" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST "
        android:id="@+id/testQuery"
        android:layout_above="@+id/showData"
        android:layout_alignLeft="@+id/loadButton"
        android:layout_alignStart="@+id/loadButton"
        android:layout_alignRight="@+id/loadButton"
        android:layout_alignEnd="@+id/loadButton" />

</RelativeLayout>
